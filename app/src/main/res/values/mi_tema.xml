<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Themes.MiTema" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/neon_green</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/verde_azul</item>
        <item name="android:colorSecondary">@color/verde_lima</item>
        <item name="colorAccent">@color/rojo_escarlata</item>
        <!--Font-->
        <item name="android:font">@font/futura</item>
        <item name="android:fontFamily">@font/futura</item>
        <!--Button-->
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/rojo_escarlata</item>
    </style>
    <style name="boton1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:backgroundTint">@color/neon_green</item>
        <item name="android:fontFamily">@font/futura</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="boton2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:backgroundTint">@color/verde_lima</item>
        <item name="android:fontFamily">@font/futura</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="TitleBold">
        <item name="android:fontFamily">@font/futura_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleNormal">
        <item name="android:fontFamily">@font/futura</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Encabezado_ficha" parent="Themes.MiTema">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/verde_lima</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RadioButtonWithIconOk">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="RadioButtonWithIconNoOk">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    </resources>